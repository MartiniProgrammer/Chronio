{
  "$schema": "https://schema.tauri.app/config/1",
  "package": { "productName": "Chronio", "version": "0.1.0" },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "tauri": {
    "bundle": {
      "identifier": "app.chronio",
      "targets": "all",
      "icon": [
        "icons/icon.ico",
        "icons/icon.icns",
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/256x256.png",
        "icons/512x512.png"
      ]
    },
    "windows": [
      { "title": "Chronio", "width": 1200, "height": 800, "resizable": true }
    ],
    "allowlist": { "all": false, "shell": { "open": true } },
    "security": { "csp": null }
  }
}
